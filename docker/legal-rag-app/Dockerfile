# dockerfile: docker/legal-rag-app/Dockerfile – This is the path to the Dockerfile, relative to the build context.

FROM ghcr.io/astral-sh/uv:0.6.14-python3.10-bookworm

WORKDIR /app

# Install additional system dependencies for lxml and other packages
RUN apt-get update && apt-get install -y \
    build-essential \
    libavif-dev pkg-config \
    libjpeg-dev \
    gcc unzip zip \
    python3-dev \
    libxml2-dev \
    libxslt1-dev \
    libffi-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*


COPY requirements.txt .

# -- system is the system user perm.
RUN uv pip install -r requirements.txt --system 

COPY src/ .

# Inside the app WD in container it becomes:

# /app/
#  ├── main.py
#  ├── routes/
#  ├── services/
#  └── etc..

# Command to run the application, executed in app WD 
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]